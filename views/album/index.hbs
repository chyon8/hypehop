




  <h5>앨범 검색 </h5>



  <form id="searchForm">


   <select style="display: hide;"  id="itemtype" name="itemtype">
      <option value="album">앨범 이름</option>


    
    </select>
   

   
  <div class="search">
    <input type="text" id="keyword" name="keyword" placeholder="앨범명으로 검색해보세요" required>
    <button type="submit" class="searchButton">
        <i  class="fa fa-search"></i>
    </button>
</div>


   
  </form>


  <div id="searchResults"></div>

  <span style="display: none;" class="loader"></span>






<h5>최근 리뷰된 앨범</h5>


<div class="album-card-container">

{{#each uniqueAlbumsArray}}

<a href="album/{{albumId}}">

 <div class="album-card">

    <div class="album-card-content">
      <h3 class="card-title-recently">{{albumTitle}}</h3>
      <div class="separator"></div>
      <p class="card-text">평점: {{albumRating}}</p>
      
   
     
    </div>
  </div>

</a>

{{/each}}




  </div>  <!--album container-->








<h5>앨범 차트</h5>

<a class="switch chip" href="/album?sort=alltime">All Time</a>
<a class="switch chip" href="/album?sort=yearly">1 year</a>

<div class="chart-card">


	<div class="title">
		<h1>Top chart</h1>
		<p>하입합 유저들의 평가를 반영한 차트입니다.<br/>앨범의 평균 평점과 평가 수를 반영합니다.</p>
	</div>



{{#ifEqual sort 'yearly'}}

{{#each top5Albums}}

<a href="/album/{{albumId}}">
	<div class="box">
		
		<div class="number">{{inc @index}}</div>
	
		<div class="cover"><img src="{{thumbnail}}" alt="01"></div>
	
		<div class="name"><span>{{averageRating}}</span> {{truncate albumTitle 40}}</div>

	
	</div>
	</a>
	
	
	<div class="separator"></div>
	
  {{/each}}



{{else ifEqual sort 'alltime'}}
{{#each top5Albums}}

<a href="/album/{{albumId}}">
	<div class="box">
		
		<div class="number">{{inc @index}}</div>
	
		<div class="cover"><img src="{{thumbnail}}" alt="01"></div>
	
		<div class="name"><span>{{averageRating}}</span> {{truncate albumTitle 40}}</div>

		
	</div>
	</a>
	
	<div class="separator"></div>
	
  {{/each}}

  {{else}}
  {{#each top5Albums}}

<a href="/album/{{albumId}}">
	<div class="box">
		
		<div class="number">{{inc @index}}</div>
	
		<div class="cover"><img src="{{thumbnail}}" alt="01"></div>
	
		<div class="name">
      <span> {{averageRating}}</span> {{truncate albumTitle 40}}</div>



	</div>
	</a>
	
	
	<div class="separator"></div>
	
  {{/each}}

{{/ifEqual}}







	</div>  <!--chart-card -->














