
<div class="row">
 
    </div> 
  
      <div class="show">
 <div class="chip">
                 <img src="{{review.user.image}}" alt="">
               
                    <a style="color: black;" href="/stories/user/{{review.user._id}}"> 
                    {{#if review.user.name}}
                    {{review.user.name}}
                    {{else}}
                    {{review.user.displayName}}
                    {{/if}}
                    </a>
                    <p> {{dateDifference review.createdAt now}}</p>
             
                   
</div>    



        <div id="{{id}}" class="card-content">
           

 
                <p class="card-title" style="text-align: left;">{{review.title}}</p>
                       
             
   
