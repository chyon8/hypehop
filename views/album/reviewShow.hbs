 <br>
            <p>트랙별 평점</p>
             <table class="striped">
            
     {{#each review.tracks}}
             
       <thead><tr>
       <th>Disc {{inc @index}} </th>
       </tr></thead>

 

           <tbody>
          <!--    <h4>Disc: {{this.discNumber}}</h4> -->
             {{#each this.trackTitle}} 
        
               <tr>
            
                <td>{{this}}</td>
                <td> {{#if (lookup ../trackRating @index)}}
                  
                  {{lookup ../trackRating @index}}

                  {{else}}
                  -
            
                  {{/if}}                 
                  </td>
            
        
  </tr>       
           
             {{/each}}
      </tbody>


               {{/each}}   <!-- review.tracks -->

</table>

 	<div class="separator-card"></div>
  <br><br>
<p style="font-weight: bold;">앨범 평</p>  
             <li> 
            
                <div class="content-body-show" >{{{ review.body }}}</div> 
            
                 </li>
                

    <div class="reviewedAblum">
    <a href="/album/{{review.albumId}}">

<img  src="{{review.thumbnail}}" alt="">
<p>{{review.albumTitle}} </p>


</a>
</div>


  </ul>         

 <div class="social" style="display: flex;">
  

     <button class="favorite"><i class="far fa-heart">
      좋아요
        {{review.isFavorite.length}}

     </i></button>


    <a class="commentBtn" href="/stories/{{_id}}">
    <button class="comment">

       

       <i class="far fa-comment"> 
          댓글
          {{comments.length}}

    


              </i>
    </i></button>
  </a>

</div>

             
                       
 

        </div>

      <p class="chip" style="position: absolute;" >조회  {{review.view}}</p>   




<!-- Display existing comments -->




  <div class="comment-section">
 
  <h5>댓글</h5>
  
{{#each comments}}

<div class="comments">



     <div class="chip-chip">
    <img  src="{{this.user.image}}" alt=""> 
     <a  style="color: black;" href="/stories/user/{{this.user._id}}">   {{#if review.user.name}}
                    {{review.user.name}}
                    {{else}}
                    {{review.user.displayName}}
                    {{/if}}</a>
     {{dateDifference createdAt now}}
       <form action="/comments/{{this._id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button style="display: contents;" type="submit">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
</div>  

<div class="comment-body">
<p>{{this.content}} </p> 


  
</div> 

  

</div>

{{/each}}
